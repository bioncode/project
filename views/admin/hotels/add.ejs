<%- include('../partials/header.ejs') -%>
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Add Hotel</h1>
        <div id="content">
            <form method="POST" class="needs-validation" novalidate>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Name</label>
                        <input type="text" class="form-control" name="name" value="" required>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Street Address</label>
                        <input type="text" class="form-control" name="street_address" value="" required>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">City</label>
                        <input type="text" class="form-control" name="city" value="" required>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">State</label>
                        <input type="text" class="form-control" name="state" value="" required>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Price</label>
                        <input type="text" class="form-control" name="price" value="" required>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Stars</label>
                        <select class="form-control" name="stars">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label>Free Wifi</label>
                        <select class="form-control" name="free_wifi">
                            <option value="1"value>Yes</optionvalue>
                            <option value="0"value>No</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Free Parking</label>
                        <select class="form-control" name="free_parking">
                            <option value="1"value>Yes</option>
                            <option value="0"value>No</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Airport shuttle</label>
                        <select class="form-control" name="airport_shuttle">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Swimming Pool</label>
                        <select class="form-control" name="swimming_pool">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Fitness Center</label>
                        <select class="form-control" name="fitness_center">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <div class="invalid-feedback">Invalid value</div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Save</button>
            </form>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') -%>