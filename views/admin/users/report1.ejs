<h4>Users List</h4>

<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Title</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(d, indx){ %>
            <tr>
                <th class="thead-dark"><%= indx + 1 %></th>
                <td>
                    <%= d.username %>
                </td>
                <td>
                    <%= d.firstname %> 
                </td>
                <td>
                    <%= d.lastname %>
                </td>
                <td>
                    <%= d.age %>
                </td>
                <td>
                    <%= d.phone %>
                </td>
                <td>
                    <%= d.email %>
                </td>
                <td>
                    <%= d.address %>
                </td>
                <td>
                    <%= d.title %>
                </td>
                <td>
                    <% if (d.type == 0 ) { %>
                        <%= d.type %> (Flight)
                    <% } %>
                    <% if (d.type == 1 ) { %>
                        <%= d.type %> (Hotel)
                    <% } %>
                </td>
            </tr>
            <% }); %>
        </tbody>

    </table>
</div>