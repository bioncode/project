<%- include('../partials/header.ejs') %>

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Search Flights</h1>
        
        <!-- <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Administration Page </li>
                    </ol> -->
        <div id="content">
            <form method="get" action="">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="key" placeholder="Flight number, Airline, Departure or Arrival airport">
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="submit" id="button-addon2">Search</button>
                    </div>
                </div>
            </form>

            <% if (data.length ) { %>
            <div class="table-responsive">
                <table class="table table-hover table-striped ">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Number</th>
                            <th>Airline</th>
                            <th>Departure time</th>
                            <th>Arrival time</th>
                            <th>Duration</th>
                            <th>Departure airport</th>
                            <th>Arrival airport</th>
                            <th>Layovers</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(flight){ %>
                        <tr>
                            <td><%= flight.id %></td>
                            <td><%= flight.flight_num %></td>
                            <td><%= flight.airline %></td>
                            <td><%= dtm(flight.departure_datetime) %></td>
                            <td><%= dtm(flight.arrival_datetime) %></td>
                            <td><%= flight.duration %></td>
                            <td><%= flight.departure_airport %></td>
                            <td><%= flight.arrival_airport %></td>
                            <td><%= flight.layovers %></td>
                            <td><%= flight.price %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% } %>
            <% if (data.length == 0 ) { %>
                <div class="alert alert-info">No flights found</div>
            <% } %>  
        </div>     
    </div>
</main>

<%- include('../partials/footer.ejs') %>